<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate//Hibernate Mapping DTD 3.0//EN" 
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.ibooking.po">
    <class name="Option" table="ib_option">
        <id name="id" column="option_id" type="integer">
            <generator class="identity"/>
        </id>
        <property name="name" column="option_name" type="string"/>
        <property name="value" column="option_value" type="string"/>
    </class>
</hibernate-mapping>